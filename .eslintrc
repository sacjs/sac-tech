env:
  es6: true
  node: true
  browser: true

parserOptions:
  ecmaVersion: 8


rules:
  camelcase: 2
  new-cap: [0, "capIsNew"]
  eol-last: 2
  quotes: [2, "single", "avoid-escape"]
  no-mixed-spaces-and-tabs: 2
  no-trailing-spaces: 2
  no-underscore-dangle: 0
  no-unused-vars: [1, { "args": "none" }]
  vars-on-top: 2
